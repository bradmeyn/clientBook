<%- include('../partials/head') -%>

<body class="d-flex flex-column vh-100 ">
    <%- include('../partials/navbar') -%>
    <div class="d-flex h-100">

    <!-- Navbar -->
    <%- include('../partials/sidenav') -%>
    
<main class="container px-5 py-4" style="background-color: #F5F5F5">
  <div class="d-flex justify-content-between align-items-center">
    <h1>Client Details</h1>
    <a href="<%-c._id%>/update" class="btn btn-primary"><i class="bi bi-pencil-square pe-2"></i>Edit Details</a>
  </div>
  
  <div class="row mx-auto shadow-sm w-100 bg-white mt-4">

    <div class="row p-2 border-bottom border-muted m-auto">
      <div class="col-6 fw-bold">Client Number</div>
      <div class="col-6 "> <%-c.clientId %></div>
    </div>

    <div class="row p-2 border-bottom border-muted m-auto">
      <div class="col-6 fw-bold">Salutation:</div>
      <div class="col-6 "><%-c.salutation %></div>
    </div>

   <div class="row p-2 border-bottom border-muted m-auto">
     <div class="col-6 fw-bold">First Name:</div>
     <div class="col-6 "><%-c.firstName%></div>
   </div>
  
   <div class="row p-2 border-bottom border-muted m-auto">
    <div class="col-6 fw-bold">Last Name:</div>
    <div class="col-6"><%-c.lastName%></div>
  </div>
  
  <div class="row p-2 border-bottom border-muted m-auto">
    <div class="col-6 fw-bold">Date of Birth:</div>
    <div class="col-6"><%-c.dob.fullDate %> (31 years old)</div>
  </div>

  <!-- <div class="row p-2 border-bottom border-muted m-auto">
    <div class="col-6 fw-bold">Marital Status</div>
    <div class="col-6">Married <a class="link link-primary">(Emily Byram)</a></div>
  </div> -->
</div>


  <h4 class="mt-5 mb-3">Contact Details</h4>
  <div class="row mb-4 mx-auto shadow-sm w-100 bg-white">

    <div class="row p-2 border-bottom border-muted m-auto">
      <div class="col-6 fw-bold">Home Address:</div>
      <div class="col-6">
        <div class="col-12"><%-c.address.street%>,</div>
        <div class="col-12 mt-1"><%-c.address.suburb%> <%-c.address.state%> <%-c.address.postcode%></div>
      </div>
    </div>
  
    <div class="row p-2 border-bottom border-muted m-auto">
      <div class="col-6 fw-bold">Phone Number:</div>
      <div class="col-6"><%-c.phone %></div>
    </div>
  
    <div class="row p-2 border-bottom border-muted m-auto">
      <div class="col-6 fw-bold">Email:</div>
      <div class="col-6"><%-c.email %></div>
    </div>


</div>

  
  </main>
</div>













    
</body>

<%- include('../partials/footer') -%>