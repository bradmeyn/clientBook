<div
  class="d-flex flex-column flex-shrink-0 p-3 bg-light border-end border-muted"
  style="width: 200px"
>
  <a
    href="/clients/<%-c._id%>"
    class="link-dark px-2"
    style="text-decoration: none"
    ><i class="me-2 bi bi-person"></i><%-c.firstName%> <%-c.lastName%></a
  >

  <hr />
  <ul class="nav nav-pills flex-column mb-auto">
    <li class="nav-item">
      <a href="#" class="nav-link active" aria-current="page">
        <i class="me-2 bi bi-person-lines-fill"></i>
        Details
      </a>
    </li>
    <li>
      <a href="#" class="nav-link link-dark">
        <i class="me-2 bi bi-house-door"></i>
        Assets
      </a>
    </li>
    <li>
      <a href="#" class="nav-link link-dark">
        <i class="me-2 bi bi-cash-coin"></i>
        Cashflow
      </a>
    </li>
    <li>
      <a
        href="/clients/<%-c._id%>/notes"
        class="nav-link <% if(page === 'notes'){ %> active <% } else { %> link-dark <% } %>"
      >
        <i class="me-2 bi bi-sticky"></i>
        Notes
      </a>
    </li>
  </ul>
  <hr />

  <!-- Button trigger modal -->
  <button
    type="button"
    class="d-block btn btn-danger mx-auto"
    data-bs-toggle="modal"
    data-bs-target="#myModal"
  >
    <i class="me-2 bi bi-trash"></i>Delete Client
  </button>

  <!-- Modal -->
  <div
    class="modal fade"
    id="myModal"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">
            Confirm Client Deletion
          </h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          Client details will be permanently deleted.
        </div>
        <form
          action="/clients/<%-c._id%>?_method=DELETE"
          method="POST"
          class="w-100"
        >
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Cancel
            </button>
            <button type="submit" class="btn btn-danger">Delete Client</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
