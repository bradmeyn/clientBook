<%- include('../partials/head') -%>

<body class="d-flex flex-column" style="min-height: 100vh">
  <%- include('../partials/navbar') -%>
  <div class="d-flex flex-column flex-grow-1 bg-light">
    <%- include('../partials/flash') -%> <%- include('../partials/sidenav') -%>

    <main class="container px-3 mx-auto w-100 h-100 my-5">
      <div class="bg-white shadow-sm p-4 card-max-width">
        <form action="/clients/<%-c._id%>/jobs" method="POST">
          <h1 class="mb-4 pb-2 border-bottom border-muted fs-4">
            New Job for <%-c.name%>
          </h1>

          <div class="form-group mb-2">
            <label class="form-label small text-muted" for="jobTitle"
              >Job Title</label
            >
            <input
              type="text"
              class="form-control"
              id="jobTitle"
              name="job[title]"
            />
          </div>

          <div class="form-group mb-2">
            <label class="form-label small text-muted" for="jobDescription"
              >Description</label
            >
            <textarea
              class="form-control"
              id="jobDescription"
              name="job[description]"
              rows="3"
            ></textarea>
          </div>

          <div class="form-label small text-muted">Job Type</div>
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="job[type]"
              id="jobTypeNew"
              value="New"
            />
            <label class="form-check-label" for="jobTypeNew">New</label>
          </div>
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="job[type]"
              id="jobTypeUpdate"
              value="Update"
            />
            <label class="form-check-label job-type" for="jobTypeUpdate"
              >Update</label
            >
          </div>

          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="job[type]"
              id="jobTypeOther"
              value="Other"
            />
            <label class="form-check-label job-type" for="jobTypeOther"
              >Other</label
            >
          </div>

          <div class="form-group my-2">
            <label class="form-label small text-muted" for="jobRevenue"
              >Revenue</label
            >
            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <span class="input-group-text">$</span>
              </div>
              <input
                name="job[revenue]"
                id="jobRevenue"
                type="text"
                class="form-control"
                aria-label="Amount (to the nearest dollar)"
              />
              <div class="input-group-append">
                <span class="input-group-text">.00</span>
              </div>
            </div>
          </div>

          <div class="form-group mb-2">
            <label class="form-label small text-muted" for="jobStatus"
              >Job Status</label
            >
            <select
              name="job[status]"
              id="jobStatus"
              class="form-select"
              required
            >
              <option value="" hidden class="text-muted" selected>
                Select job status
              </option>
              <option value="Not Started">Not Started</option>
              <option value="In Progress">In Progress</option>
              <option value="Finalising">Finalising</option>
              <option value="On Hold">On Hold</option>
            </select>
          </div>

          <div class="form-group mb-2">
            <label class="form-label small text-muted" for="dueDate"
              >Due date:</label
            >
            <input
              type="date"
              class="form-control"
              id="dueDate"
              placeholder=""
              name="job[due]"
              pattern="^[^0-9]+$"
            />
          </div>

          <div class="mt-3">
            <button
              type="submit"
              class="ms-auto btn btn-primary"
              data-bs-dismiss="modal"
              aria-label="Save"
            >
              Save Job
            </button>

            <a
              href="#"
              type="button"
              class="btn btn-secondary"
              aria-label="Cancel"
              onclick="javascript:window.history.back(-1);return false;"
            >
              Cancel
            </a>
          </div>
        </form>
      </div>
    </main>
  </div>

  <%- include('../partials/footer') -%>
</body>
